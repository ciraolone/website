
{% if title or description or heroImage %}
<section class="w-full bg-slate-100 relative overflow-hidden border-b border-slate-200">
    <!-- Corner Ribbon Badge -->
    {% if badge %}
    <div class="absolute transform rotate-45 bg-red-600 text-center text-white font-semibold py-1 right-[-35px] top-[32px] w-[170px]">
        {{ badge }}
    </div>
    {% endif %}
  
    <div class="w-full px-4 py-16 lg:py-24">
        <div class="w-full">
            <div class="flex flex-col lg:flex-row items-center justify-center gap-12">
            <!-- Text Content -->
                <div class="flex-1 prose">
                    {% if title %}
                    <h1 class="">
                        {{ title | safe }}
                    </h1>
                    {% endif %}

                    {% if description %}
                    <h2 class="">
                        {{ description | safe }}
                    </h2>
                    {% endif %}
                </div>

                <!-- Image -->
                {% if heroImage %}
                <div class="flex-shrink-0 relative z-10 prose">
                    <div class="relative">
                        <img src="{{ heroImage }}"
                            alt="{{ title }}"
                            class="max-w-sm lg:max-w-md">
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endif %}