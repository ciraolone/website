{% if title or description or heroImage %}
<section class="w-full bg-slate-100 border-b border-slate-200">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="w-full">
      <div class="flex flex-col md:flex-row items-center justify-center gap-8">
        <!-- Text Content -->
        <div class="flex-1 prose">
          {% if title %}
          <h1 class="text-4xl mb-4">{{ title | safe }}</h1>
          {% endif %} {% if description %}
          <h2 class="font-normal italic mt-0 mb-4">{{ description | safe }}</h2>
          {% endif %} {% if badge %}
          <span
            class="bg-red-600 text-white font-bold py-1 px-4 rounded-xl text-sm"
          >
            {{ badge }}
          </span>
          {% endif %}
        </div>

        <!-- Image -->
        {% if heroImage %}
        <div class="flex-shrink-0">
          <img
            src="{{ heroImage }}"
            alt="{{ title }}"
            class="max-w-sm lg:max-w-md rounded-xl"
          />
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}
