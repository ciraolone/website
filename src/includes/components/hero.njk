
{% if heroTitle or heroSubtitle or heroImage %}
<section class="hero-header bg-gradient-to-br from-red-500 via-blue-400 to-cyan-300 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Ccircle cx="7" cy="7" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>

    <div class="container mx-auto px-4 py-16 lg:py-24">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
            <!-- Text Content -->
            <div class="flex-1 text-white z-10">
                {% if heroTitle %}
                <h1 class="text-4xl lg:text-6xl font-bold mb-4 leading-tight">
                    {{ heroTitle | safe }}
                </h1>
                {% endif %}

                {% if heroSubtitle %}
                <div class="bg-red-600 inline-block px-4 py-2 rounded-lg text-lg lg:text-xl font-semibold mb-6">
                    {{ heroSubtitle }}
                </div>
                {% endif %}

                {% if heroDescription %}
                <p class="text-xl lg:text-2xl leading-relaxed opacity-95">
                    {{ heroDescription | safe }}
                </p>
                {% endif %}
            </div>

            <!-- Image -->
            {% if heroImage %}
            <div class="flex-shrink-0 relative z-10">
                <div class="relative">
                    <img src="{{ heroImage }}"
                         alt="{{ heroImageAlt or heroTitle }}"
                         class="max-w-sm lg:max-w-md rounded-2xl shadow-2xl border-4 border-white/20">
                    {% if editionBadge %}
                    <div class="absolute -top-4 -right-4 bg-red-600 text-white px-4 py-2 rounded-full font-bold text-sm lg:text-base transform rotate-12 shadow-lg">
                        {{ editionBadge }}
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endif %}