
{% if title or description or heroImage %}
<section class="hero-header bg-gradient-to-br from-red-500 via-blue-400 to-cyan-300 relative overflow-hidden" style="width: 100vw; margin-left: calc(-50vw + 50%);">
    <!-- Corner Ribbon Badge -->
    {% if badge %}
    <div class="absolute right-0 top-0 h-16 w-16">
        <div class="absolute transform rotate-45 bg-red-600 text-center text-white font-semibold py-1 right-[-35px] top-[32px] w-[170px]">
            {{ badge }}
        </div>
  </div>
    {% endif %}
  
    <div class="w-full px-4 py-16 lg:py-24">
        <div class="max-w-6xl mx-auto">
            <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
            <!-- Text Content -->
            <div class="flex-1 text-white z-10">
                {% if title %}
                <h1 class="text-4xl lg:text-6xl font-bold mb-4 leading-tight">
                    {{ title | safe }}
                </h1>
                {% endif %}

                {% if description %}
                <p class="text-xl lg:text-2xl leading-relaxed opacity-95">
                    {{ description | safe }}
                </p>
                {% endif %}
            </div>

            <!-- Image -->
            {% if heroImage %}
            <div class="flex-shrink-0 relative z-10">
                <div class="relative">
                    <img src="{{ heroImage }}"
                         alt="{{ title }}"
                         class="max-w-sm lg:max-w-md rounded-2xl shadow-2xl border-4 border-white/20">
                </div>
            </div>
            {% endif %}
            </div>
        </div>
    </div>
</section>
{% endif %}